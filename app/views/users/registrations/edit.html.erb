<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="container">
<div class = "col-sm-offset-2 col-sm-12">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal", method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <div class = "col-sm-offset-3 col-sm-5">
    <%= image_tag(current_user.avatar.url(:thumb) , :id => "output", :style => "max-width:200px;max-height:200px") %><br>

     <%= f.label :avatar  %>
     <%= f.file_field :avatar, accept: 'image/*', :onchange => "loadFile(event)" %>
   </div>
 </div>
  <div class="form-group">
   <%= f.label :name, :class => "control-label col-sm-2" %>
   <div class="col-sm-5">
      <%= f.text_field :name, :class => "form-control " ,autofocus: true %>
    </div>
 </div>
  <div class="form-group">
    <%= f.label :email, :class => "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f.email_field :email, :class => "form-control " %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password,  :class => "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f.password_field :password, :class => "form-control ", autocomplete: "off" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, :class => "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f.password_field :password_confirmation, :class => "form-control ",autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group">

    <%= f.label :current_password, :class => "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f.password_field :current_password, :class => "form-control ",autocomplete: "off" %>
      <em>(we need your current password to confirm your changes)</em>
    </div>
  </div>

  <div class="actions">
    <div class="col-sm-offset-3 col-sm-10">
      <%= f.submit "Update", :class => "btn btn-info" %>
    </div>
  </div>
<% end %>
</div>
</div>
<center>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</center>
